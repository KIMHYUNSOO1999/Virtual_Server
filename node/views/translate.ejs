            <select name="output">
				<option value="en">영어</option>
                <option value="ko">한국어</option>
				<option value="zh-CN">중국어 간체</option>
                <option value="zh-TW">중국어 번체</option>
                <option value="ja">일본어</option>
            </select>
            <br><br><br>
             <input type="submit" style="width: 100px; height: 50px;" value="번역">
             <input type="button" style="width: 100px; height: 50px;" value="리셋" onclick="resetTextarea()">
        </form>
    </body>
</html>